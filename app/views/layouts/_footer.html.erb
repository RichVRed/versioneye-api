.footer_social_icon{
  font-size: 24px;
  text-decoration: none;
}

.footer_social_icon:hover{
  text-decoration: none;
}

.footer_link_margin{
  margin-right: 10px;
}

.footer_link_row_1{
  text-align: center;
  margin-bottom: 10px;
